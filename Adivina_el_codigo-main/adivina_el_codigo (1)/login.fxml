<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<!-- Contenedor principal de tipo VBox, alineado al centro y con espacio entre elementos -->
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="example.adivina_el_codigo.LoginController" spacing="20" alignment="CENTER">

    <!-- Título del juego -->
    <Text text="Adivina el código" styleClass="text-title" />

    <!-- Botón para iniciar un nuevo juego de un jugador -->
    <Button fx:id="singlePlayerButton" text="Un Jugador" onAction="#startSinglePlayerGame" styleClass="button" />

    <!-- Botón para iniciar un nuevo juego de dos jugadores -->
    <Button fx:id="twoPlayerButton" text="Dos Jugadores" onAction="#startTwoPlayerGame" styleClass="button" />

</VBox>
